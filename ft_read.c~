#include "libft.h"
#include "fillit.h"

int		ft_strlen(void)
{
	int j;

	j = 0;
	while (read(fd, &buffer, 1) != 0)
	{
		if (read(fd, &buffer, 1) == '\n')
			j++;
	}
	return (j);
}


int		**ft_read(int argc, char **argv)
{
	char	buffer;
	int		**tab;
	int		fd;
	int		i;
	int		j;

	i = 0;
	j = 0;
	fd = open(argv[1], O_RDONLY);
	tab = (int **)malloc(sizeof(int *) * ft_strlen());
	tab = (int *)malloc(sizeof(int) * 4);
	while (read(fd, &buffer, 1) != 0)
	{
		if (read(fd, &buffer, 1) == '#')
			tab[j][i] = 1;
		if (read(fd, &buffer, 1) == '.')
			tab[j][i] = 0;
		if (read(fd, &buffer, 1) == '\n')
			j++;
		i++;
	}
	return (tab);
}
